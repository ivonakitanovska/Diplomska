@model PrespaEvents.Web.Models.DTO.AddToShoppingCardDto

@{
    ViewData["Title"] = "Add to shopping card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Selected Event to Shopping Card:</h1>

<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddEventToCard" method="post">
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="SelectedEvent.EventName"></label>
                <input disabled asp-for="SelectedEvent.EventName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>