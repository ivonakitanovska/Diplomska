@model PrespaEvents.Web.Models.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    form {
        background-color: cornflowerblue;
        opacity: 0.7;
        padding: 20px; 
        border-radius: 30px; 
        width: 400px; 
        margin-right: 20px; 
    }

    button {
        margin-left: 15px;
    }

   
    .prespa_button {
        color: white;
        border: 1px solid white;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logindiv {
        flex: 1;
    }

  
    .spacer {
        width: 20px;
    }

 
</style>

<div class="container">
    <div class="logindiv">
        <h1>Login</h1>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-outline-success prespa_button">Login</button>
                    <br />
                    <a style="color:white;" asp-action="Register" asp-controller="Account">Don't have an account? Click to Register</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Desna strana - Slika -->
    <div>
        <img src="~/images/prespaevents-high-resolution-logo-transparent.png" alt="Background Image" style="width: 60vh; height: auto; border-radius: 10px;">
    </div>
</div>
