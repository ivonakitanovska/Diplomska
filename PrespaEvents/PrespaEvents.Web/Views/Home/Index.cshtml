@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

  
    <!-- Add custom styles for background image -->
    <style>
    

        .jumbotron {
            background: none; /* Make the jumbotron background transparent */
        }

        /* Add more styles as needed for other elements */
    </style>
</head>
<body>

    @*<div class="jumbotron text-center">
            <h1 class="display-4">Welcome To Prespa Event</h1>
        </div>*@

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/dummy_1024x680_ffffff_cccccc.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/dummy_1024x680_ffffff_cccccc.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/dummy_1024x680_ffffff_cccccc.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div style="margin-top:20px;">
        <h2 style="text-align:center;">Newest Events</h2>
        <hr />
        <div class="container" style="background-color:white;">

            <div class="row">

                <!-- Prva -->
                <div class="col-4">
                    <div class="card" style="height: 100%;">
                        <img class="card-img-top" src="~/images/prespa_cover.jpg" style="height:50%" />
                        <div class="card-body">
                            <h5 class="card-title">EventName</h5>
                        </div>
                    </div>
                </div>

                <!-- Vtora -->
                <div class="col-4">
                    <div class="card" style="height: 100%;">
                        <img class="card-img-top" src="~/images/prespa_cover.jpg" style="height:50%" />
                        <div class="card-body">
                            <h5 class="card-title">EventName</h5>
                        </div>
                    </div>
                </div>

                <!-- Treta -->
                <div class="col-4">
                    <div class="card" style="height: 100%;">
                        <img class="card-img-top" src="~/images/prespa_cover.jpg" style="height:50%" />
                        <div class="card-body">
                            <h5 class="card-title">EventName</h5>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>



</body>
</html>
